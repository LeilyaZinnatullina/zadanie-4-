//(1)Заполните массив элементами арифметической прогрессии.Её первый элемент и разность нужно ввести с клавиатуры.
#include <iostream>
using namespace std;
void ar(int a[], const int size) {
	int x;
	cin >> a[0] >> x;
	for (int i = 1; i < size; i++) {
		a[i] = a[i - 1] + x;
		
	}
}
void print_array(int a[], const int size) {
	for (int i = 0; i < size; i++) {
		cout << a[i] << " ";
	}
	cout << endl;
}
int main() {
	int const n = 10;
	int a[n];
	ar(a, n);
	print_array(a, n);
	return 0;
}

//(2)Заполните массив из N элементов случайными целыми числами в диапазоне 1..N так, чтобы в массив обязательно вошли все числа от 1 до N(постройте случайную перестановку).
#include <iostream>
using namespace std;
int random_number(int n) {
	return rand() % n + 1;
}
void print_array(int array[], int size) {
	for (int i = 0; i < size; i++) {
		cout << array[i] << " ";
	}

//(3)Заполните массив случайными числами в диапазоне 1000.2000 и подсчитайте число элементов, у которых вторая с конца цифра – чётная.
#include <iostream>
#include <random>
#include <ctime>
#include <stdlib.h>
using namespace std;
void Scan_array(int array[], int size) {
	for (int i = 0; i < size; i++) array[i] = rand() % 1001 + 1000;
}

void Print_array(int array[], int size) {
	int c = 0;
	for (int i = 0; i < size; i++) {
		if ((array[i] / 10) % 2 == 0) { c++; };
		cout << array[i] << " ";
	}
	cout << c;
}

int main() {
	int const n = 10;
	int array[n];
	srand(time(0));
	Scan_array(array, n);
	Print_array(array, n);
	return 0;
}
	cout << endl;
}
void random_array(int array[], int size) {
	for (int i = 0; i < size; i++) {
		array[i] = random_number(10);
		int tmp = array[0];
	}
}
int main() {
	const int n = 10;
	int a[n];
	random_array(a, n);
	print_array(a, n);
	return 0;

}

